<Window x:Class="iS3.Desktop.Settlement_calculation_page1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iS3.Desktop"
        mc:Ignorable="d"
        Title="桩基础沉降测算插件V1.0" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <GroupBox BorderBrush="Black" Header="基础数据" FontSize="18">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid  Background="AliceBlue" Grid.Row="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" FontSize="15" Width="auto"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Text="均布荷载（Kpa）" Margin="5"/>
                        <TextBox x:Name="load" FontSize="15" HorizontalAlignment="Left" 
                             VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Width="100"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="15" Width="auto"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Text="桩基沉降经验系数ψ" Margin="5"/>
                        <TextBox x:Name="posi" FontSize="15" HorizontalAlignment="Left" 
                             VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Width="100"/>
                    </Grid>
                    
                    
                </Grid>
                
            </GroupBox>
            <GroupBox Grid.Column="1" BorderBrush="Black" FontSize="15" Header="桩基础数据预览">
                <ScrollViewer Height="auto" >
                    <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="True"/>
                </ScrollViewer>
            </GroupBox>
            
        </Grid>
        
        <StackPanel FlowDirection="RightToLeft" Height="auto" Grid.Row="1" Orientation="Horizontal">
            <Button HorizontalAlignment="Right" Width="100" Height="auto" Content="计算" Click="Button_Click" Margin="20,5,5,5"></Button>
        </StackPanel>
    </Grid>
</Window>
